<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_bg"
    android:orientation="vertical"
    tools:context="com.example.hcz.hechangzhi.LoginActivity">

    <include layout="@layout/title_bar" />

    <EditText
        android:id="@+id/user_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="36dp"
        android:layout_marginRight="36dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/bg_et"
        android:drawableLeft="@drawable/user1"
        android:drawablePadding="12dp"
        android:hint="请输入用户名"
        android:inputType="text"
        android:padding="7dp"
        android:paddingLeft="10dp"
        android:textColorHint="@color/C5"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/user_pwd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="36dp"
        android:layout_marginRight="36dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/bg_et"
        android:drawableLeft="@drawable/pwd1"
        android:drawablePadding="12dp"
        android:hint="请输入密码"
        android:inputType="textPassword"
        android:padding="7dp"
        android:paddingLeft="10dp"
        android:textColorHint="@color/C5"
        android:textSize="16sp" />

    <Button
        android:id="@+id/login"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="35dp"
        android:layout_marginLeft="36dp"
        android:layout_marginRight="36dp"
        android:background="@drawable/bt_bottom_gray"
        android:text="登录"
        android:textColor="@android:color/white"
        android:textSize="14sp" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">

        <TextView
            android:id="@+id/register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="36dp"
            android:text="去注册吧！"
            android:textColor="@color/colorPrimary"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/wang_pwd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="36dp"
            android:text="忘记密码？"
            android:textColor="@color/colorPrimary"
            android:textSize="13sp" />
    </RelativeLayout>


</LinearLayout>
